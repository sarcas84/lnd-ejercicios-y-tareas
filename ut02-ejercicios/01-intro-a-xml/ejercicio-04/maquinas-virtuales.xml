<?xml version="1.0" encoding="UTF_8"?>
<!DOCTYPE maquina-virtuales SYSTEM "maquina-virtuales.dtd">
<maquina-virtuales> 

    <maquina id="1">
        <nombre>Ubuntu_Server</nombre>
        <cpu>2</cpu>
        <ram unidad="MB">4096</ram>
        <disco ruta="/home/user/VirtualBox VMs/Ubuntu_Server/Ubuntu_Server.vdi" tipo="vdi"/>
        <tamaño_disco unidad="GB">25</tamaño_disco>
        <adaptador_red tipo="NAT">
            <regla_puerto>
                <puerto_huesped>22</puerto_huesped>
                <puerto_externo>2222</puerto_externo>
            </regla_puerto>
        </adaptador_red>
    </maquina>

    <maquina id="2">
        <nombre>Ubuntu_desktop</nombre>
        <cpu>2</cpu>
        <ram unidad="MB">4096</ram>
        <disco ruta="/home/user/VirtualBox VMs/ubuntu_desktop/ubuntud.vmdk" tipo="vmdk"/>
        <tamaño_disco unidad="GB">25</tamaño_disco>
        <adaptador_red tipo="puente"/>
    </maquina>

    <maquina id="3">
        <nombre>linux_mint</nombre>
        <cpu>2</cpu>
        <ram unidad="MB">4096</ram>
        <disco ruta="/home/user/VirtualBox VMs/linux_mint/mint.vdi" tipo="vdi"/>
        <tamaño_disco unidad="GB">25</tamaño_disco>
        <adaptador_red tipo="NAT">
            <regla_puerto>
                <puerto_huesped>80</puerto_huesped>
                <puerto_externo>8080</puerto_externo>
            </regla_puerto>
            <regla_puerto>
                <puerto_huesped>443</puerto_huesped>
                <puerto_externo>8443</puerto_externo>
            </regla_puerto>
        </adaptador_red>
    </maquina>
</maquina-virtuales>
